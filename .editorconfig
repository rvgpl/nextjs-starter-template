# http://editorconfig.org

root = true

# Defaults

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
spaces_around_brackets = true
spaces_around_operators = true
insert_final_newline = true
max_line_length = 120
quote_type = single

[*.md]
trim_trailing_whitespace = false

[*.{ts,js,css,html,json,yaml}]
indent_size = 4
indent_style = space

[{Makefile, makefile}]
indent_style = tab
indent_size = 4